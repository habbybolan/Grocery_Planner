<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.habbybolan.groceryplanner">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".di.GroceryApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/server_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".online.myrecipes.MyRecipesActivity"
            android:label="@string/title_activity_my_recipes"
            android:theme="@style/MyMaterialTheme.NoActionBar"></activity>
        <activity android:name=".online.myrecipes.myrecipesedit.OnlineRecipeDetailsEditActivity" />
        <activity android:name=".online.savedrecipes.SavedRecipesActivity" />
        <activity android:name=".online.displayonlinerecipe.OnlineRecipeDetailActivity" />
        <activity
            android:name=".online.discover.DiscoverActivity"
            android:label="@string/title_activity_discover" />
        <activity android:name=".listing.ingredientlist.IngredientListActivity" />
        <activity android:name=".loginpage.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainPage.MainActivity"
            android:parentActivityName=".listing.grocerylist.GroceryListActivity" />
        <activity
            android:name=".details.recipe.RecipeDetailActivity"
            android:parentActivityName=".MainPage.MainActivity" />
        <activity
            android:name=".listing.recipelist.RecipeListActivity"
            android:parentActivityName=".MainPage.MainActivity" />
        <activity
            android:name=".details.grocerydetails.GroceryIngredientsActivity"
            android:parentActivityName=".MainPage.MainActivity" />
        <activity
            android:name=".listing.grocerylist.GroceryListActivity"
            android:parentActivityName=".MainPage.MainActivity" />
    </application>

</manifest>