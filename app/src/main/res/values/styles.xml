<resources>

    <style name="MyMaterialTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionModeOverlay">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorAccent">@color/colorRedAccentBright</item>
    </style>

    <style name="DefaultButton" parent="android:style/Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/custom_default_button</item>
    </style>

    <style name="DefaultButtonDark" parent="android:style/Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/custom_default_button_dark</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorRedAccentMedium</item>
        <item name="colorPrimaryDark">@color/colorRedAccentDark</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

    <style name="ActionBarTheme" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="backgroundTint">@color/colorRedAccentMedium</item>
    </style>

    <!-- todo: not working when applied style to FloatingActionButton -->
    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorAccent">#000000</item>
    </style>

</resources>
