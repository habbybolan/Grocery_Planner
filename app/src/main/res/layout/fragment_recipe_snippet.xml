<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="recipeName"
            type="String" />
        <variable
            name="likes"
            type="String" />
        <variable
            name="instructions"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainPage.recipesnippet.RecipeSnippetFragment"
        android:background="?attr/colorOnBackground"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="@dimen/margin_start_info"
                android:text="@{recipeName}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:text="@{likes}"
                android:layout_toStartOf="@+id/star_icon"/>

            <ImageView
                android:id="@+id/star_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                app:srcCompat="@android:drawable/btn_star"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recipe_snippet_rv_tags"
            android:layout_width="@dimen/edit_txt_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/margin_start_info"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="@dimen/margin_start_info"
            android:text="Instructions"/>


        <com.habbybolan.groceryplanner.ui.MaxHeightScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:maxHeightSV="100dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="@dimen/edit_txt_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="@dimen/margin_start_info"
                android:text="@{instructions}"/>

        </com.habbybolan.groceryplanner.ui.MaxHeightScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="@dimen/margin_start_info"
            android:textSize="20sp"
            android:text="Ingredients"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recipe_snippet_rv_ingredients"
            android:layout_width="@dimen/edit_txt_width"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constrainedHeight="true"
            app:layout_constraintHeight_max="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="@dimen/margin_start_info" />


    </LinearLayout>

</layout>