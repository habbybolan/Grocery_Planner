<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="groceryName"
            type="String" />
        <variable
            name="recipeAmount"
            type="String" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/grocery_text_container"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@color/colorRedAccentMedium">

                <TextView
                    android:id="@+id/dialog_grocery_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:text="TEST"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/dialog_grocery_name"
                    android:text="X 20"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/grocery_text_container"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/add_recipe_amount"
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_launcher_background"
                        android:layout_centerInParent="true"
                        tools:srcCompat="@android:drawable/ic_input_add" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/minus_recipe_amount"
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_launcher_background"
                        android:layout_centerInParent="true"
                        tools:srcCompat="@android:drawable/ic_input_add" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</layout>