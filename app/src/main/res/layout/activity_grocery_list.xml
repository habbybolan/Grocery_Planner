<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GroceryListActivity"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"
            android:id="@+id/toolbar_grocery_list">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@android:drawable/btn_dialog" />
        </include>

        <fragment
                android:id="@+id/fragment_recipe_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.habbybolan.groceryplanner.listing.grocerylist.GroceryListFragment"
                tools:layout="@layout/fragment_grocery_list"/>



    </LinearLayout>

</layout>