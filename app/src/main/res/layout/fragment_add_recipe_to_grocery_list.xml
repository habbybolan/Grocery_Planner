<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".details.offlinerecipes.overview.grocerylistrecipes.AddRecipeToGroceryListFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recipe_overview_grocery_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_info"
            android:text="Groceries" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recipe_overview_groceries"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_info" />

        <ImageButton
            android:id="@+id/btn_recipe_add_to_grocery"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/margin_start_info"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_input_add" />

    </LinearLayout>


</layout>